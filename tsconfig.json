{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@Assets": ["src/assets/*"],
      "@Components/*": ["src/components/*"],
      "@Views/*": ["src/views/*"],
      "@Utils": ["src/utils/*"],
    },
    "target": "ESNext",
    "jsx": "react-native",
    "types": [
      "react",
      "react-native"
    ],
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
